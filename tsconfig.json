{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "target": "ES6",
        "lib": [
            "dom",
            "es5",
            "ES6"
        ]
    },
    "include": [
        "web/src/*.ts"
    ]
}
